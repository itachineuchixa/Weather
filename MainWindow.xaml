        <Border  CornerRadius="30 30 30 30" Background="#F6F6F6" >
            <StackPanel>
                <Frame NavigationUIVisibility="Hidden" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" Height="685"/>
            </StackPanel>
        </Border>

    </Grid>
